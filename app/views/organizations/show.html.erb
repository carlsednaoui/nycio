<div class="container-fluid">
  <div class="row">
    <div class="col-md-12 event">

		<h1><%= @organization.name %></h1>

		<h2><%= @organization.description %></h2>
	</div>
  </div>

  <div class="row">
    <div class="col-md-12 event">
		<% @organization.events.each do |event| %>
			<p><%= link_to event.name, event %></p>
		<% end %>
	</div>
  </div>

	<% if can? :manage, @organization  %>
		<br><br>
		<div class="row">
			<div class="col-md-12 event">
				<p><%= link_to "Edit Organization", edit_organization_path(@organization) %></p>
			</div>
		</div>
	<% end %>
